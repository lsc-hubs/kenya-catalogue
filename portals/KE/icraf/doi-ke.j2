mcf:
    version: 1.0

metadata:
    identifier: {{ md['doi'] }} 
    dataseturi: {{ md['doi'] }} 
    hierarchylevel: {{ md['hierarchylevel'] }}

identification:
    keywords:
        spatialscope:
            keywords: {{ md['place'] }} 
            vocabulary:
                    name: Spatial scope
                    url: https://inspire.ec.europa.eu/metadata-codelist/SpatialScope
        theme:
            keywords: [{{ md['category'] }}]
            vocabulary:
                name: LSC tags
                url: https://lsc-hubs.org/tags/
        lsc:
            keywords: [{{ md['tag'] }}]
            vocabulary:
                name: LSC categories
                url: https://lsc-hubs.org/tags/